<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookLibrary</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookLibrary.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-sm navbar-harbor border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white"
                   asp-controller="Home"
                   asp-action="Index">
                    BookLibrary
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white"
                               asp-controller="Home"
                               asp-action="Index">
                                Home
                            </a>
                        </li>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white"
                                   asp-controller="Books"
                                   asp-action="Index">
                                    Books
                                </a>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center mb-0">
            @TempData["SuccessMessage"]
        </div>
    }

    <main class="container flex-fill">
        <div class="pb-3">
            @RenderBody()
        </div>
    </main>

    <footer class="footer bg-dark text-light mt-auto">
        <div class="container text-center py-3">
            &copy; 2026 - BookLibrary
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>