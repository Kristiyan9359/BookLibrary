@model BookLibrary.ViewModels.Books.BookDetailsViewModel

@{
    ViewData["Title"] = "Book Details";
}

<h2>@Model.Title</h2>

<ul class="list-group mb-3">
    <li class="list-group-item"><strong>Author:</strong> @Model.Author</li>
    <li class="list-group-item"><strong>Country:</strong> @Model.Country</li>
    <li class="list-group-item"><strong>Genre:</strong> @Model.Genre</li>
    <li class="list-group-item"><strong>Year:</strong> @Model.Year</li>
    <li class="list-group-item"><strong>Pages:</strong> @Model.Pages</li>
</ul>

<h4>Reviews</h4>

@if (!Model.Reviews.Any())
{
    <p>No reviews yet.</p>
}
else
{
    <ul class="list-group mb-3">
        @foreach (var review in Model.Reviews)
        {
            <li class="list-group-item">
                <strong>Rating:</strong> @review.Rating / 5 <br />
                <small class="text-muted">
                    @review.CreatedOn.ToString("dd.MM.yyyy")
                </small>
                <p class="mb-0">@review.Comment</p>
            </li>
        }
    </ul>
}

@if (User.Identity?.IsAuthenticated == true && !Model.IsOwner)
{
    <hr />

    <h4>Add Review</h4>

    <form asp-controller="Reviews" asp-action="Add" method="post">
        <input type="hidden" name="BookId" value="@Model.Id" />

        <div class="mb-3">
            <label class="form-label">Rating</label>
            <select name="Rating" class="form-select">
                <option value="">-- Select rating --</option>
                @for (int i = 1; i <= 5; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Comment</label>
            <textarea name="Comment"
                  class="form-control"
                  rows="3"
                  placeholder="Optional comment..."></textarea>
        </div>

        <button type="submit" class="btn btn-success">
            ➕ Add review
        </button>
    </form>
}

<div class="mt-4">
    @if (User.Identity?.IsAuthenticated == true && Model.IsOwner)
    {
        <a asp-action="Edit"
           asp-route-id="@Model.Id"
           class="btn btn-warning me-2">
            Edit
        </a>

        <a asp-action="Delete"
           asp-route-id="@Model.Id"
           class="btn btn-danger me-2">
            Delete
        </a>
    }

    <a asp-action="Index"
       class="btn btn-secondary">
        Back to list
    </a>
</div>