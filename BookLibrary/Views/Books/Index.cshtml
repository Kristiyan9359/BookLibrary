@model IEnumerable<BookLibrary.ViewModels.Books.BookIndexViewModel>

@{
    ViewData["Title"] = "Books";
}

<h2>Books</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    Add new book
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Pages</th>
            <th>Rating</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Year</td>
                <td>@book.Genre</td>
                <td>@book.Pages</td>
                <td>
                    @if (book.AverageRating.HasValue)
                    {
                        <span class="badge bg-success">
                            @book.AverageRating.Value.ToString("0.0")
                            <small>(@book.ReviewsCount)</small>
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">
                            No reviews
                        </span>
                    }
                </td>
                <td>
                    <a asp-action="Details"
                       asp-route-id="@book.Id"
                       class="btn btn-sm btn-primary">
                        Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
