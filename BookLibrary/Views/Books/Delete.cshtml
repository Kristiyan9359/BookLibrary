@model BookLibrary.Data.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this book?</strong>
</div>

<ul class="list-group mb-3">
    <li class="list-group-item">
        <strong>Title:</strong> @Model.Title
    </li>
    <li class="list-group-item">
        <strong>Author:</strong> @Model.Author.FirstName @Model.Author.LastName
    </li>
    <li class="list-group-item">
        <strong>Genre:</strong> @Model.Genre.Name
    </li>
</ul>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <button type="submit" class="btn btn-danger">
         Delete
    </button>

    <a asp-action="Details"
       asp-route-id="@Model.Id"
       class="btn btn-secondary ms-2">
        Cancel
    </a>
</form>