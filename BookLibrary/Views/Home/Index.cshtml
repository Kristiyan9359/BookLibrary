@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-5">
    <h1 class="display-5 fw-bold">
        Welcome to BookLibrary
    </h1>

    <p class="lead mt-3">
        A simple library system where you can explore books,
        manage your collection, and share your opinions through reviews.
    </p>

    <hr class="my-4" />

    <p class="mb-4">
        Browse available books, check their ratings,
        or add new titles to the library.
    </p>

    <div class="d-flex justify-content-center gap-3">
        <a asp-controller="Books"
           asp-action="Index"
           class="btn btn-primary btn-lg">
            📚 Browse Books
        </a>

        <a asp-controller="Books"
           asp-action="Create"
           class="btn btn-outline-secondary btn-lg">
            ➕ Add New Book
        </a>
    </div>
</div>